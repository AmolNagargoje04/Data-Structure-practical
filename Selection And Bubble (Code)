// Selection Sort

 #include<stdio.h> int 
main() {   
int arr[5] = {10, 30, 50, 40, 20};   
int n = 5;   
int i, j, pos, swap;  
  
    for (i = 0; i < n - 1; i++) {         
pos = i;         for (j = i + 1; j < 
n; j++) {             if (arr[pos] 
> arr[j])                 pos = j;  
        }  
 if (pos != i) {             
swap = arr[i];             
arr[i] = arr[pos];             
arr[pos] = swap;  
        }  
    }  
  
    for (i = 0; i < n; i++) {  
       printf("%d\n", arr[i]);  
    }  
  
  
    return 0;  
}  




// Bubble Sort
#include 
<stdio.h>  
  
int main() {     int a[10] = {10, 30, 50, 40, 20};   
int temp;  
    int i, j;  
  
    printf("Array before bubble sorting:\n");     
for (i = 0; i < 5; i++) {         printf("%d   ", a[i]);  
    }  
    printf("\n");  
  
   for (i = 0; i < 5; i++) {  
        for (j = 0; j < 4; j++) 
{             if (a[j] > a[j + 1]) 
{                 temp = a[j];                 
  
  
a[j] = a[j + 1];                 
a[j + 1] = temp;  
            }  
        }  
    }  
  
    printf("Array after sorting:\n");     
for (i = 0; i < 5; i++) {         printf("%d   
", a[i]);  
    }  
    printf("\n");  
  
    return 0;  
} 
